<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/img_playlist"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:contentDescription="@string/photo" />

    <TextView
        android:background="#CC000008"
        android:paddingStart="54dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/playlist"
        app:layout_constraintStart_toStartOf="@id/img_playlist"
        app:layout_constraintBottom_toBottomOf="@+id/img_playlist"
        android:layout_width="120dp"
        android:layout_height="24dp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_playlist"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:id="@+id/txt_name_of_playlist"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Emotional Well-being j Healing Practices for Children"
            android:layout_width="200dp"
            android:layout_height="40dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_how_many_videos"
            android:textColor="@color/black"
            android:text="32 video series"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>